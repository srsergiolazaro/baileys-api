{
	"name": "baileys-api",
	"version": "1.1.4",
	"description": "Simple WhatsApp REST API with multiple device support",
	"main": "dist/index.js",
	"scripts": {
		"build": "prisma generate && tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src",
		"start": "node -r -r ts-node ./dist/index.js",
		"dev": "prisma generate && nodemon --exec \"ts-node -r tsconfig-paths/register\" src/index.ts",
		"lint": "eslint . --ext .ts",
		"format": "prettier . --write",
		"postinstall": "prisma generate",
		"changelog:preview": "conventional-changelog -p angular -u",
		"changelog:last": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
	},
	"keywords": [],
	"author": "Nizar",
	"license": "MIT",
	"dependencies": {
		"@hapi/boom": "^10.0.1",
		"@prisma/client": "^6.8.2",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.7",
		"axios": "^1.7.2",
		"baileys": "^6.7.16",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"express-validator": "^7.0.1",
		"form-data": "^4.0.0",
		"jsonwebtoken": "^9.0.2",
		"libphonenumber-js": "^1.11.3",
		"link-preview-js": "^3.0.5",
		"long": "^5.2.3",
		"multer": "^1.4.5-lts.1",
		"pino": "^7.11.0",
		"pino-pretty": "^11.0.0",
		"qrcode": "^1.5.3",
		"qrcode-terminal": "^0.12.0",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1",
		"ws": "^8.16.0"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.25.0",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/express-serve-static-core": "^4.19.5",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/multer": "^1.4.11",
		"@types/node": "^20.11.19",
		"@types/qrcode": "^1.5.5",
		"@types/ws": "^8.5.10",
		"@typescript-eslint/eslint-plugin": "^8.30.1",
		"@typescript-eslint/parser": "^8.30.1",
		"conventional-changelog-cli": "^4.1.0",
		"eslint": "^9.25.0",
		"eslint-config-prettier": "^9.1.0",
		"globals": "^16.0.0",
		"nodemon": "^3.0.3",
		"prettier": "^3.2.5",
		"prettier-plugin-organize-imports": "^3.2.4",
		"prisma": "^6.8.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"tscpaths": "^0.0.9",
		"typescript": "^5.3.3"
	},
	"engines": {
		"node": ">=18.19.0"
	},
	"files": [
		"dist/",
		"prisma/schema.prisma",
		".env.example"
	]
}