{
	"name": "baileys-api",
	"version": "1.1.4",
	"description": "Simple WhatsApp REST API with multiple device support",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc --project tsconfig.json && node ./scripts/esm-fix-paths.mjs",
		"start": "node ./dist/index.js",
		"dev": "nodemon --watch src --ext ts --exec \"tsx\" src/index.ts",
		"changelog:preview": "conventional-changelog -p angular -u",
		"changelog:last": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
		"lint": "eslint \"src/**/*.ts\" --quiet",
		"lint:fix": "eslint \"src/**/*.ts\" --fix",
		"format": "prettier --write \"src/**/*.ts\""
	},
	"keywords": [],
	"author": "Nizar",
	"license": "MIT",
	"dependencies": {
		"@hapi/boom": "^10.0.1",
		"@neondatabase/serverless": "^1.0.2",
		"@prisma/adapter-neon": "^6.14.0",
		"@prisma/client": "^6.14.0",
		"@types/swagger-jsdoc": "^6.0.4",
		"axios": "^1.11.0",
		"baileys": "7.0.0-rc.6",
		"cors": "^2.8.5",
		"dotenv": "^17.2.1",
		"express": "^4.18.3",
		"express-validator": "^7.2.1",
		"form-data": "^4.0.4",
		"fuse.js": "^7.1.0",
		"jsonwebtoken": "^9.0.2",
		"libphonenumber-js": "^1.12.14",
		"link-preview-js": "^3.1.0",
		"long": "^5.3.2",
		"multer": "^2.0.2",
		"pino": "^9.9.0",
		"pino-pretty": "^13.1.1",
		"prisma": "^6.14.0",
		"qrcode": "^1.5.4",
		"qrcode-terminal": "^0.12.0",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1",
		"uuid": "^13.0.0",
		"ws": "^8.18.3"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.0",
		"@types/cors": "^2.8.19",
		"@types/express": "^4.17.21",
		"@types/express-serve-static-core": "^4.17.43",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/multer": "1.4.13",
		"@types/node": "^24.3.0",
		"@types/qrcode": "^1.5.5",
		"@types/swagger-ui-express": "^4.1.8",
		"@types/ws": "^8.18.1",
		"concurrently": "^9.2.1",
		"conventional-changelog-cli": "^5.0.0",
		"eslint": "^9.4.0",
		"eslint-config-prettier": "^9.1.0",
		"nodemon": "^3.1.11",
		"prettier": "^3.6.2",
		"prettier-plugin-organize-imports": "^4.2.0",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^4.19.2",
		"typescript": "^5.9.2",
		"typescript-eslint": "^7.18.0"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"files": [
		"dist/",
		"prisma/schema.prisma",
