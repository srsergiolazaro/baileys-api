{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": false,
		"skipLibCheck": true,
		"lib": ["ESNext"],
		"outDir": "dist/",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"typeRoots": ["./node_modules/@types", "./src/@types"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["dist", "node_modules", ".eslintrc.js", "prettier.config.cjs"],
	"ts-node": {
		"files": true,
		"transpileOnly": false
	}
}
